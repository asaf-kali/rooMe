<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosingActivity">

    <TextView
        android:id="@+id/tv_hello_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:shadowColor="#40000000"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:textColor="#D78A94D3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/choosing_head_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/choosing_head_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif"
        android:shadowColor="#40000000"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="@string/what_would_you_like_to_find"
        android:textColor="#D78A94D3"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/choosing_button_apt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="What would you like to find?" />

    <ImageView
        android:id="@+id/main_back_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/house_back_img" />

    <ImageView
        android:id="@+id/choosing_button_apt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/drop_shadow"
        android:onClick="apartmentSearcherOnclick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_back_img2"
        app:srcCompat="@drawable/ic_choosing_button" />

    <ImageView
        android:id="@+id/choosing_button_roomate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="@drawable/drop_shadow"
        android:onClick="roommateSearcherOnclick"
        app:layout_constraintBottom_toBottomOf="@+id/main_back_img2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choosing_button_apt"
        app:srcCompat="@drawable/ic_choosing_button" />

    <ImageView
        android:id="@+id/apt_to_join_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/choosing_button_apt"
        app:layout_constraintEnd_toEndOf="@+id/choosing_button_apt"
        app:layout_constraintStart_toStartOf="@+id/choosing_button_apt"
        app:layout_constraintTop_toTopOf="@+id/choosing_button_apt"
        app:srcCompat="@drawable/ic_apartment_to_join_to_txt" />

    <ImageView
        android:id="@+id/roomate_for_my_apt_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/choosing_button_roomate"
        app:layout_constraintEnd_toEndOf="@+id/choosing_button_roomate"
        app:layout_constraintStart_toStartOf="@+id/choosing_button_roomate"
        app:layout_constraintTop_toTopOf="@+id/choosing_button_roomate"
        app:srcCompat="@drawable/ic_roommate_for_my_apt_txt" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="147dp"
        android:layout_height="136dp"
        android:indeterminateTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/choosing_button_apt"
        app:layout_constraintEnd_toEndOf="@+id/choosing_button_apt"
        app:layout_constraintStart_toStartOf="@+id/choosing_button_apt"
        app:layout_constraintTop_toTopOf="@+id/choosing_button_apt" />


</androidx.constraintlayout.widget.ConstraintLayout>